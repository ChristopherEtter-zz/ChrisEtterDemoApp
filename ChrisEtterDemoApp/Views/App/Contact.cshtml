@model ContactViewModel
@{
    ViewData["Title"] = "Contact Me";
}

<div class="col-md-6 col-md-offset-3">
    <div class="well">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label>Your Name:</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                <span class="text-danger">@Html.ValidationMessageFor(x => x.Name)</span>
            </div>
            <div class="form-group">
                <label>Email:</label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                <span class="text-danger">@Html.ValidationMessageFor(x => x.Email)</span>
            </div>
            <div class="form-group">
                <label>Subject:</label>
                @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                <span class="text-danger">@Html.ValidationMessageFor(x => x.Subject)</span>

            </div>
            <div class="form-group">
                <label>Message</label>
                @Html.TextAreaFor(x => x.Message, new { @class = "form-control" })
                <span class="text-danger">@Html.ValidationMessageFor(x => x.Message)</span>
            </div>
            <div class="form-group">  
                <button type="submit" class="btn btn-primary"><i class="fa fa-envelope"></i>&nbsp;Send Message</button>
                <div class="text-success">@ViewBag.UserMessage</div>
            </div>
           
        </form>
    </div>
</div>

@section Scripts{ 
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

